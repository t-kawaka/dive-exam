<div class="index">
  <h2>一覧</h2>
  <p><%= notice %></p>
</div>
<div class="list">
  <h2>物件一覧</h2>
  <table>
    <tbody>
      <tr>
        <th>物件名</th>
        <th>賃料</th>
        <th>住所</th>
        <th>築年数</th>
        <th>備考</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @estates.each do |estate| %>
      <tr>
        <td><%=estate.house %></td>
        <td><%=number_with_delimiter(estate.money) %>円</td>
        <td><%=estate.address %></td>
        <td><%=estate.age %>年</td>
        <td><%=estate.information %></td>
        <td><%= link_to "詳細", estate_path(estate.id) %></td>
        <td><%= link_to "編集", edit_estate_path(estate.id) %></td>
        <td><%= link_to "削除", estate_path(estate.id), method: :delete, data: {confirm:"本当に削除しますか？"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "物件を登録する", new_estate_path %>
</div>
